{
    "Logging": {
        "LogLevel": {
            "Default": "Debug",
            "Microsoft": "Debug",
            "Pivotal": "Debug",
            "Steeltoe": "Debug",
            "System": "Debug"
        }
    },

    "eureka": {
        "client": {
            "validateCertificates": false
        }
    },

    "spring": {
        "cloud": {
            "config": {
                "failFast": true,

                "retry": {
                    "enabled": true,
                    "maxAttempts": 2
                },

                "validateCertificates": false
            }
        }
    }
}